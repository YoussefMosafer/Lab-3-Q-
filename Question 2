#include <stdio.h>

int main() {
    int balance = 1000;  
    int transactions[] = {200, -150, -500, -400, -50, -200, 300};  
    int numTransactions = sizeof(transactions) / sizeof(transactions[0]);
    int tobeprocessed[10];  
    int tobeprocessedIndex = 0;  

    for (int i = 0; i < numTransactions; i++) {
        int transaction = transactions[i];

        if (transaction < 0 && balance + transaction < 0) {
            printf("Transaction %d (withdrawal of %d AED) is invalid - insufficient balance.\n", i + 1, -transaction);
            tobeprocessed[tobeprocessedIndex++] = transaction;  
            continue;
        }

        balance += transaction;

        if (balance == 0) {
            printf("Balance has reached zero. No further transactions will be processed.\n");
            for (int j = i + 1; j < numTransactions; j++) {
                tobeprocessed[tobeprocessedIndex++] = transactions[j];  
            }
            break;
        }
    }

    printf("Final balance: %d AED\n", balance);

    printf("Unprocessed transactions: ");
    for (int i = 0; i < tobeprocessedIndex; i++) {
        printf("%d ", tobeprocessed[i]);
    }
    printf("\n");

    return 0;
}
